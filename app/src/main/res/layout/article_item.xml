<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="?attr/colorSecondary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/article_detail_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/article_image" />

    <TextView
        android:id="@+id/article_time_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/article_detail_image"
        android:layout_toEndOf="@+id/article_detail_image"
        android:layout_alignParentTop="true"
        android:textColor="?attr/colorText"
        />

    <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/article_detail_image"
            android:layout_toEndOf="@+id/article_detail_image"
            android:layout_below="@+id/article_time_category"
            android:textSize="14sp"
            android:textColor="?attr/colorText" />

</RelativeLayout>